<div class="row" >
  <div class="col-lg-12">
    <h3 style="text-align:center;background-color:#4D4D4D;color:#F0EDE8;padding-top:3px;padding-bottom:3px">
      Treemap grouped
    </h3>
  </div>
</div>

<div class="row" >
  <div id="treemap" class="col-lg-9"></div>
  <div class="col-lg-3">
    <div class="table-responsive">
        <table class="table">
          <% @payments_grouped[:children].reverse.each do |payments| %>
            <tr class="active">
              <td><%= payments[:name] %></td>
              <td><%= payments[:children].length %></td>
            </tr>
          <% end %>
        </table>
      </div>
  </div>
</div>

<script type="text/javascript" charset="utf-8">
  var jsonPath = "/payments_grouped.json";
</script>

<script src="/js/treemap_grouped.js"></script>