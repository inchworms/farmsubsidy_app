<div class="row">
  <div class="col-lg-12">
    <form action="/" method="get">
      <fieldset>
        <legend>Farmsubsidy</legend>
        <a href="ranked_per_year_per_payment">
          <span class="glyphicon glyphicon-align-left"></span>
          to the top 10 per year
        </a>
        <p></p>
        <a href="ranked_all_years_per_payment">
          <span class="glyphicon glyphicon-align-left"></span>
          to the top 20 total
        </a>
        <p></p>
        <label>
        Search for a name:
        </label>
        <input type="text" name="name" value="<%= params[:name] %>">
        <button class="btn btn-warning" type="submit">
          Search
        </button>
      </fieldset>
    </form>
  </div>
</div>

