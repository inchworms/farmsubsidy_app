<div class="row">
  <div class="col-lg-12">

    <% if @recipients != [] %>
        <p>
          We found <%= @recipients.all.length %> recipients with your search-term.
        </p>
        <h3>All Recipients:</h3>
        <% @recipients.each do | recipient | %>
          <p><a href="recipient/<%= recipient.id %>"><span class="glyphicon glyphicon-user"></span> <%= recipient.name %></a></p>
        <% end %>
    <% else %>                  
      <h3>
        Please enter a search-term for a list of names including this term.
      </h3>
    <% end %>
  </div>
</div>
