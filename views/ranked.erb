<div class="row">
  <div class="col-lg-2">
    <form action="/ranked" method="get">
    <label for="year">
    Select Year
    </label>
      <select class="form-control" name="year">
        <% Year.full_range.each do |year| %>
          <option <%= "selected" if year.to_s == params[:year] %>><%= year %></option>
        <% end %>
      </select>
      <button class="btn" type="submit">
        Filter by Year
      </button>
    </form>
  </div>
  <div class="col-lg-4">
    <form action="/ranked" method="get">
    <label for="country">
    Select Country
    </label>
      <select class="form-control" name="country">
        <option> Czech </option>
      </select>
      <button class="btn" type="submit">
        Filter by Country
      </button>
    </form>
  </div>
</div>
<div class="row" style="margin-top:40px">
  <div class="col-lg-12">
    <h3 style="text-align:center;background-color:#4D4D4D;color:#F0EDE8;padding-top:3px;padding-bottom:3px">
      Visualization of Czech EU-Farmsubsidys in the year <%= params[:year] || @default_year %>
    </h3>
  </div>
</div>

<div class="row" style="margin-top:30px">
  <div id="bar-chart" class="col-lg-12"></div>
</div>

<script type="text/javascript" charset="utf-8">
  // data
  var data = <%= @ranked_by_year %>;
</script>

<script src="/js/top_ten_barchart.js"></script>

